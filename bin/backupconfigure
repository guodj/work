#!/bin/bash
cfdir="$HOME"/configure_files/
rsync -a "$HOME"/{.vimrc,.bashrc,.gitconfig,.muttrc,.msmtprc,.tmux.conf} "$cfdir"
rsync -a "$HOME"/anaconda3/lib/python3.6/site-packages/apexpy/{apex.py.gdj,helpers.py.gdj} "$cfdir"apexpy/
rsync -a "$HOME"/.config/matplotlib/matplotlibrc "$cfdir".config/matplotlib/
cd "$cfdir"
read -p "Commit description: " desc
git add --all
git commit -m "$desc"
git push origin master
